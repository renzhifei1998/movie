.show .header .header-left {
  padding: 30rpx 0;
  background-color: Silver;
  display: flex;
  align-items: center;
  justify-content: center;
}
.show .header .header-left text {
  font-size: 40rpx;
  color: #eb4450;
  font-weight: bold;
}
.show .centent .centent-header {
  position: relative;
}
.show .centent .centent-header text {
  display: block;
  font-size: 35rpx;
  font-weight: 700;
  padding: 30rpx 30rpx;
}
.show .centent .centent-header text:nth-child(1) {
  margin-left: 20rpx;
}
.show .centent .centent-header text:nth-child(2) {
  position: absolute;
  right: 20rpx;
  top: 0;
}
.show .centent .centent-header .centent-info {
  overflow: hidden;
  position: absolute;
  top: 50rpx;
}
.show .centent .centent-header .centent-info text {
  font-size: 30rpx;
  font-weight: lighter;
  float: left;
  position: relative;
}
.show .centent .centent-header .centent-info text:nth-child(1) {
  color: #ff7300;
}
.show .centent-major {
  padding-top: 50rpx;
}
.show .centent-major text {
  display: block;
}
.show .centent-major text:nth-child(2) {
  padding-left: 30rpx;
  color: #ff7300;
}
.show .centent-major text:nth-child(3) {
  text-align: center;
  padding: 30rpx 30rpx;
}
.show .comment .comment-title {
  padding: 10rpx;
  font-size: 28rpx;
}
.show .comment .comment-list .comment-item {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-bottom: 10rpx;
  padding: 10rpx;
  border-bottom: 1px solid #666;
}
.show .comment .comment-list .comment-item .comment-datail {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.show .comment .comment-list .comment-item .comment-datail .author {
  font-weight: 900;
  font-size: 28rpx;
  color: #000;
}
.show .comment .comment-list .comment-item .comment-datail .date {
  color: #666;
  font-size: 24rpx;
}
.show .comment .comment-list .comment-item .comment-content {
  font-size: 28rpx;
  color: #000000;
}
.show .change {
  display: flex;
  justify-content: space-around;
  margin: 30rpx 0;
}
.show .change .scys {
  display: flex;
  justify-content: center;
  font-size: 40rpx;
  color: #666666;
  border: 1px solid #666;
  background-color: #CCCCCC;
  border-radius: 10rpx;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.show .change .tpys {
  display: flex;
  justify-content: center;
  font-size: 40rpx;
  color: #666666;
  border: 1px solid #666;
  background-color: #CCCCCC;
  border-radius: 10rpx;
  width: 180rpx;
  height: 60rpx;
}
.show .change .icon-shoucang-not11 {
  color: red;
}
